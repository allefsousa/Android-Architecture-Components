<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.developers.allefsousa.architecturecomponents.MainActivity"
    tools:showIn="@layout/activity_main">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinplayounome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:hint="Nome *"
                android:padding="08dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inpNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinplayousobre"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:hint="Sobrenome"
                android:padding="08dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inpSobre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinplayoucpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:hint="Cpf *"
                android:padding="08dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/inpCpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btnsalvar"
                android:layout_marginTop="10dp"
                android:text="Salvar"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
